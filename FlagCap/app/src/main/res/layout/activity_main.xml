<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/main_activity"
    android:weightSum="1"
    android:background="@drawable/gradient">

    <TextView
        android:id="@+id/textView"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/player_name"
        android:layout_weight="0.17"
        android:textSize="@dimen/abc_action_bar_content_inset_material"
        android:textStyle="normal|bold|italic"
        android:theme="@style/Widget.AppCompat.Button.Borderless"
        android:transitionName="@string/abc_action_bar_home_description"
        android:shadowColor="#ffff0010"
        android:singleLine="true"
        android:phoneNumber="false"
        android:textColor="#ffff0000"
        android:outlineProvider="background"
        android:letterSpacing="2"
        android:gravity="center"
        android:hint="This is your nickname"
        android:alpha="100" />

    <Button
        android:id="@+id/start_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/action_count"
    />

    <Button
        android:id="@+id/start_gamemenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/action_gamemenu"
    />

    <Button
        android:id="@+id/start_location_tracker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/action_location"
    />

    <Button
        android:id="@+id/buttonGetData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Select Nickname"
    />

    <Button
        android:id="@+id/buttonToBrowser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Go to our website"
    />

    <ImageView
        android:layout_width="168dp"
        android:layout_height="209dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/game_background"
        android:background="@drawable/background" />

</LinearLayout>
